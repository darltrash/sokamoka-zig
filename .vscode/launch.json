{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(GDB) Launch!",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/zig-out/bin/sokamoka",
            "cwd": "${workspaceRoot}", 
            
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }

    ]
}